{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist/server",
    "rootDir": "src",
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["node", "express", "socket.io"],
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["src/server/**/*", "src/types/**/*"],
  "exclude": ["node_modules"]
}